<div class="container">
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@property.errors.count, "error") %> prohibited
        this property from being saved:
      </h2>
      <ul>
        <% @property.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for :property, url:properties_path do |f| %>
  <h1>Add property</h1>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Address %><br>
    <%= f.text_field :address %>
  </p>
   <p>
    <%= f.label :B_code %><br>
    <%= f.text_field :b_code %>
  </p>
  <p>
    <%= f.label :Zip %><br>
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :Prize %><br>
    <%= f.text_field :prize %>
  </p>
 <p>
    <input class="btn btn-primary" type="submit" value="Save property">
  </p>
<% end %>
<%= link_to 'back', root_path %>
</div>